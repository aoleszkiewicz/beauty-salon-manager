# Beauty Salon Manager - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Required for Production
# ===========================================

# Secret key for session/token signing (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Database URL (SQLite for dev, PostgreSQL for prod)
DATABASE_URL=sqlite+aiosqlite:///./data/salon.db

# ===========================================
# Optional Settings
# ===========================================

# Debug mode (set to false in production)
DEBUG=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000
